<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="OOPProject.Santo.HandleEmergencyRideShutdownController">
    <children>
        <Label text="Emergency Ride Shutdown" layoutX="14.0" layoutY="14.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <Label text="Emergency Alert Status:" layoutX="14.0" layoutY="50.0"/>
        <TextArea fx:id="alertStatusArea" layoutX="14.0" layoutY="70.0" prefHeight="100.0" prefWidth="300.0" editable="false" />

        <Button text="Detect Emergency" layoutX="14.0" layoutY="180.0" onAction="#handleDetectEmergency"/>

        <Button text="Emergency Stop" layoutX="14.0" layoutY="220.0" onAction="#handleEmergencyStop"/>

        <Label text="Incident Details:" layoutX="14.0" layoutY="260.0"/>
        <TextArea fx:id="incidentDetailsArea" layoutX="14.0" layoutY="280.0" prefHeight="100.0" prefWidth="300.0" />

        <Button text="Notify Park Admin" layoutX="14.0" layoutY="390.0" onAction="#handleNotifyAdmin"/>

        <Label text="Log Status:" layoutX="14.0" layoutY="430.0"/>
        <TextArea fx:id="logStatusArea" layoutX="14.0" layoutY="450.0" prefHeight="100.0" prefWidth="300.0" editable="false" />
    </children>
</AnchorPane>