<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="OOPProject.Santo.ScheduleMaintenanceController">
    <children>
        <Label text="Schedule Maintenance for Rides" layoutX="14.0" layoutY="14.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <Label text="Hire Staff:" layoutX="14.0" layoutY="50.0"/>
        <TextField fx:id="staffNameField" layoutX="120.0" layoutY="46.0" promptText="Staff Name"/>
        <TextField fx:id="staffRoleField" layoutX="120.0" layoutY="86.0" promptText="Staff Role"/>
        <Button text="Hire Staff" layoutX="14.0" layoutY="126.0" onAction="#handleHireStaff"/>

        <Label text="Conduct Staff Training:" layoutX="14.0" layoutY="170.0"/>
        <TextField fx:id="trainingSessionField" layoutX="120.0" layoutY="166.0" promptText="Training Session"/>
        <Button text="Schedule Training" layoutX="14.0" layoutY="206.0" onAction="#handleScheduleTraining"/>

        <Label text="Fire Staff:" layoutX="14.0" layoutY="250.0"/>
        <TextField fx:id="fireStaffNameField" layoutX="120.0" layoutY="246.0" promptText="Staff Name"/>
        <Button text="Fire Staff" layoutX="14.0" layoutY="286.0" onAction="#handleFireStaff"/>

        <Label text="Evaluate Staff Performance:" layoutX="14.0" layoutY="320.0"/>
        <TextField fx:id="evaluateStaffNameField" layoutX="120.0" layoutY="316.0" promptText="Staff Name"/>
        <Button text="Evaluate Performance" layoutX="14.0" layoutY="356.0" onAction="#handleEvaluatePerformance"/>

        <Label text="Status:" layoutX="14.0" layoutY="400.0"/>
        <TextArea fx:id="statusArea" layoutX="14.0" layoutY="420.0" prefHeight="100.0" prefWidth="400.0" editable="false" />
    </children>
</AnchorPane>