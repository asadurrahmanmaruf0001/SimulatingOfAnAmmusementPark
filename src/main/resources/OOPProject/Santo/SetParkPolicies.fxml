<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="OOPProject.Santo.SetParkPoliciesController">
    <children>
        <Label text="Manage Policies" layoutX="14.0" layoutY="14.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <Label text="Policy Title:" layoutX="14.0" layoutY="50.0"/>
        <TextField fx:id="policyTitleField" layoutX="120.0" layoutY="46.0" />

        <Label text="Policy Content:" layoutX="14.0" layoutY="90.0"/>
        <TextArea fx:id="policyContentArea" layoutX="14.0" layoutY="120.0" prefHeight="150.0" prefWidth="300.0" />

        <Button text="Save Policy" layoutX="14.0" layoutY="280.0" onAction="#handleSavePolicy"/>

        <Label text="Validation Messages:" layoutX="14.0" layoutY="320.0"/>
        <TextArea fx:id="validationMessagesArea" layoutX="14.0" layoutY="350.0" prefHeight="100.0" prefWidth="300.0" editable="false" />
    </children>
</AnchorPane>
